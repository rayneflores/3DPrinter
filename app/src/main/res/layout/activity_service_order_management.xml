<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.ServiceOrderManagementActivity">

    <EditText
        android:id="@+id/txtOrderId"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/lblServiceOrderManagementTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Registrar Nueva Orden"
        android:textAlignment="center"
        android:textColor="@color/iconsColor"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/llServiceOrderDataContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true">

            <EditText
                android:id="@+id/txtOrderPrinterSerial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:hint="Serial"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="text"
                android:textSize="@dimen/fontLarge" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="Impresora:"
            android:textSize="@dimen/fontLarge" />

        <Spinner
            android:id="@+id/spPrinterList"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <EditText
                android:id="@+id/txtOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:enabled="false"
                android:hint="Fecha"
                android:inputType="text"
                android:textSize="@dimen/fontLarge" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Status: "
            android:textSize="@dimen/fontLarge" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbStatNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nueva"
                android:textSize="@dimen/fontMini" />

            <RadioButton
                android:id="@+id/rbStatInProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En Proceso"
                android:textSize="@dimen/fontMini" />

            <RadioButton
                android:id="@+id/rbStatDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Procesada"
                android:textSize="@dimen/fontMini" />

            <RadioButton
                android:id="@+id/rbStatRejected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rechazada"
                android:textSize="@dimen/fontMini" />
        </RadioGroup>

        <Button
            android:id="@+id/btnRegisterOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="onClick"
            android:text="@string/registrar_orden" />

    </LinearLayout>

</LinearLayout>