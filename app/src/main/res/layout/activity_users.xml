<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UsersActivity">

    <TextView
        android:id="@+id/tvUserListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lista_de_usuarios"
        android:textColor="@color/iconsColor"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_below="@+id/tvUserListTitle"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/lvUsers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/user"
        android:backgroundTint="@color/colorGris"
        android:textColor="@color/iconsColor"
        android:text="@string/nuevo_usuario"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

</RelativeLayout>